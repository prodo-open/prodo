extends layout

block content
	h1 Login
	form(action="/login", method="POST")
		if error
			p.error=error
		if message
			p.message=message
		label
			input(type="email", name="email", placeholder="Email", value="#{email || ''}")
		label
			input(type="password", name="password", placeholder="Password")
		p
			button(type="submit") Login
